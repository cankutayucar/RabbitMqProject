@{
    ViewData["Title"] = "Files";
}
@model List<UserFile>
<h1>Files</h1>

<table class="table table-striped">
    <thead>
    <th>File Name</th>
    <th>Created Date</th>
    <th>File Status</th>
    <th>Download</th>
    </thead>
    <tbody>
        @foreach (var item in Model)
        {
            <tr>
                <td>@item.FileName</td>
                <td>@item.GetCreatedDate</td>
                <td>@item.FileStatus</td>
                <td><a href="~/files/@item.FilePath" class="btn btn-primary @(item.FileStatus == FileStatus.Creating ? "disable" : "")">Download</a></td>
            </tr>
        }
    </tbody>
</table>

